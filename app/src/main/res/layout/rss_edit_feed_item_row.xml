<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/rssEditFeedTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Title RSS Feed"
        android:text="Title RSS Feed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rssEditFeedItemAddressTV"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_below="@+id/rssEditFeedTitleTV"
        android:layout_marginTop="2dp"
        android:contentDescription="Address"
        android:ems="10"
        android:inputType="text"
        android:text="www.rss.feed.com" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_toEndOf="@+id/rssEditFeedItemAddressTV"
        android:text="TextView"
        tools:text="Tap to remove" />

</RelativeLayout>
