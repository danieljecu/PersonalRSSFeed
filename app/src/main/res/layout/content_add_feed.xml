<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddFeedActivity"
    tools:showIn="@layout/activity_add_feed">


    <EditText
        android:id="@+id/addFeedNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:ems="10"
        android:hint="@string/add_rss_feed_name_hint"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/addFeedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addFeedNameEditText"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="@string/add_rss_feed_address_hint"
        android:inputType="text|textUri" />

    <Button
        android:id="@+id/addFeedButton"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_below="@+id/addFeedEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@color/colorPrimaryDark"
        android:text="Save Feed"
        android:textColor="@color/lightTextColor" />

</RelativeLayout>